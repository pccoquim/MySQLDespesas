        <Label Name="Lbl_UserLogin"
               Content="Não existe utilizador com login efetuado!"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Margin="10,0,0,10"
               Width="300"/>
        <Label Name="Lbl_Version"
               Content="Versão:" 
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               HorizontalContentAlignment="Right"
               Margin="0,0,120,10"
               Height="30"
               Width="50"/>
        <Label Name="Lbl_VersionN"
               Content="{Binding Version}"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               HorizontalContentAlignment="Left"
               Margin="0,0,10,10"
               Height="30"
               Width="100"/>

    </Grid>
</Window>
