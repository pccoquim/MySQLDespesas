<Window x:Class="GestaoDom.Frm_000305_UserChgPw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoDom"
        mc:Ignorable="d"
        Icon="/Imagens/ChgPw.png"
        WindowStartupLocation="CenterScreen"
        Title="Criação de nova palavra-passe"
        Background="Aqua"
        Height="180"
        Width="350"
        Loaded="Frm_000304_UserChgPw_Loaded">
    <Grid>
        <Label x:Name="Lbl_UserID"
               Content="ID de utilizador"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10,10,0,0"
               Width="170">
        </Label>
        <TextBox x:Name="Txt_UserID"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="190,15,0,0"
                 Background="AntiqueWhite"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 Text=""
                 Height="20"
                 Width="120">
        </TextBox>

        <Label x:Name="Lbl_Pw"
               Content=" Nova palavra-passe"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10,40,0,0"
               Width="170">
        </Label>
        <PasswordBox x:Name="Pbx_Pw"
                     PasswordChar="*"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="190,45,0,0"
                     Background="#FFEAEAEA"
                     Height="20"
                     Width="120"
                     KeyDown="Pbx_Pw_KeyDown">
        </PasswordBox>
        <TextBox x:Name="Txt_Pw"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="190,45,0,0"
                 Background="#FFEAEAEA"
                 TextWrapping="Wrap"
                 Text=""
                 Height="20"
                 Width="120"
                 Visibility="Hidden"
                 KeyDown="Txt_Pw_KeyDown">
        </TextBox>
        <Button x:Name="Btn_ShowPw"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="310,45,0,0"
                Height="20"
                Width="20"
                Click="Btn_ShowPw_Click">
            <Image Source="/Imagens/No.png"/>
        </Button>

        <Label x:Name="Lbl_PwConf"
               Content="Confirmação de palavra-passe"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10,70,0,0"
               Width="170">
        </Label>
        <PasswordBox x:Name="Pbx_PwConf"
                     PasswordChar="*"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="190,75,0,0"
                     Background="#FFEAEAEA"
                     Height="20"
                     Width="120"
                     KeyDown="Pbx_PwConf_KeyDown">
        </PasswordBox>
        <TextBox Name="Txt_PwConf"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="190,75,0,0"
                 Background="#FFEAEAEA"
                 TextWrapping="Wrap"
                 Text=""
                 Height="20"
                 Width="120"
                 Visibility="Hidden"
                 KeyDown="Txt_PwConf_KeyDown">
        </TextBox>
        <Button x:Name="Btn_ShowPwConf"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="310,75,0,0"
                Height="20"
                Width="20"
                Click="Btn_ShowPwConf_Click">
            <Image Source="/Imagens/No.png"/>
        </Button>

        <Button x:Name="Btn_Save"
                Content="Criar"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="190,105,0,0"
                FontWeight="Bold"
                Background="GreenYellow"
                Width="60"
                Height="20"
                Click="Btn_Save_Click">
        </Button>

        <Button x:Name="Btn_Close"
                Content="Fechar"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="260,105,0,0"
                FontWeight="Bold"
                Width="60"
                Height="20"
                Click="Btn_Close_Click">
        </Button>
    </Grid>
</Window>